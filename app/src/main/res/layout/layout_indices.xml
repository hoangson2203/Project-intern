<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvIndices"
        android:layout_width="109dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_percent_positive"
        android:text="FTSE ST Mid..\n773.88\n+0.77+0.1%"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imgChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_green_chart"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="@id/tvIndices"
        app:layout_constraintBottom_toBottomOf="@id/tvIndices"
        app:layout_constraintEnd_toEndOf="@id/tvIndices"/>

</androidx.constraintlayout.widget.ConstraintLayout>